WindowManager:
    Inicio:   
    RealizarCalculo:

<MDButton>
    radius: [10,10,10,10]
    #md_bg_color: (246, 248, 238, 0)    
    theme_width: "Custom"
    size_hint_x: .75

<TextInput>
    input_filter: 'int'
    font_size: 20
    height: 35
    size_hint: 0.7, None
    hint_text_color: "#C0C0C0"
    

<RealizarCalculo>
    name: "RealizarCalculo"

    FloatLayout:

        MDIconButton:
            on_release: 
                app.root.current = "Inicio"
                root.manager.transition.direction = "right"
            pos_hint: {'x': 0.02, 'y': 0.89}
            icon: "arrow-left-circle"
            color: '#121310'
            font_size: 50

        Label:
            size_hint: (None, None)
            pos_hint: {'x': 0.45, 'y': 0.86}
            text: 'Realizar Cálculo'
            font_size: 50
            font_name: 'fonts/Roboto-Medium.ttf'
            color: '#121310'
        
        MDWidget:
            pos_hint: {'x': 0.1, 'y': 0.1}
            size_hint: 0.8, 0.7
            radius: 10
            md_bg_color: [149/255,170/255,97/255,1]

        Label:
            size_hint: (None, None)
            pos_hint: {'x': 0.18, 'y': 0.7}
            text: 'Padrão geral '
            font_size: 20
            font_name: 'fonts/Roboto-Medium.ttf'
            color: '#ffffff'

        TextInput:
            pos_hint: {'x': 0.15, 'y': 0.7} 
            hint_text: "Ex: 35673"
            id: padrao_geral
            on_text: root.on_text(self)
            
        Label:
            size_hint: (None, None)
            pos_hint: {'x': 0.19, 'y': 0.6}
            text: 'Padrão Wilson '
            font_size: 20
            font_name: 'fonts/Roboto-Medium.ttf'
            color: '#ffffff'

        TextInput:
            size_hint: 0.30, None
            pos_hint: {'x': 0.15, 'y': 0.6} 
            hint_text: "Ex: 35673"
            id: padrao_wilson
            on_text: root.on_text(self)

        Label:
            size_hint: (None, None)
            pos_hint: {'x': 0.58, 'y': 0.6}
            text: 'Padrão Célio '
            font_size: 20
            font_name: 'fonts/Roboto-Medium.ttf'
            color: '#ffffff'

        TextInput:
            size_hint: 0.30, None
            pos_hint: {'x': 0.55, 'y': 0.6} 
            hint_text: "Ex: 35673"
            id: padrao_celio
            on_text: root.on_text(self)

        MDDivider:
            size_hint_x: .8
            pos_hint: {'center_x': .5, 'center_y': .55}
            color:'#ffffff'
        
        Label:
            size_hint: (None, None)
            pos_hint: {'x': 0.24, 'y': 0.45}
            text: 'Valor total da conta'
            font_size: 20
            font_name: 'fonts/Roboto-Medium.ttf'
            color: '#ffffff'

        TextInput:
            pos_hint: {'x': 0.15, 'y': 0.45} 
            hint_text: "Ex: 230.45"
            input_filter: 'float'
            id: valor_conta
            on_text: root.on_text(self)

        Label:
            size_hint: (None, None)
            pos_hint: {'x': 0.17, 'y': 0.35}
            text: 'Valor do KW'
            font_size: 20
            font_name: 'fonts/Roboto-Medium.ttf'
            color: '#ffffff'

        TextInput:
            pos_hint: {'x': 0.15, 'y': 0.35} 
            hint_text: "Ex: 0.9596"
            input_filter: 'float'
            id: valor_kw
            on_text: root.on_text(self)
        
        Label:
            size_hint: (None, None)
            pos_hint: {'x': 0.23, 'y': 0.25}
            text: 'Taxa de iluminação'
            font_size: 20
            font_name: 'fonts/Roboto-Medium.ttf'
            color: '#ffffff'

        TextInput:
            pos_hint: {'x': 0.15, 'y': 0.25} 
            hint_text: "Ex: 45.00"
            input_filter: 'float'
            id: taxa_iluminacao
            on_text: root.on_text(self)

        MDButton:
            id: button
            pos_hint: {'x': 0.35, 'y': 0.14}
            height: 70
            shadow_offset: -6, 6
            size_hint_x: .3
            md_bg_color_disabled: '#C0C0C0'
            disabled: True
            on_release: root.calculate()

            MDButtonText:
                text: "Calcular"
                theme_font_name: "Custom"
                theme_font_size: "Custom"
                font_name: 'fonts/Roboto-Light.ttf'
                color: '#121310'
                font_size: 25
                pos_hint: {'x': 0.18, 'center_y': 0.5}
                

        Image:
            source: 'images\lamp.png'
            size_hint: (0.2, None )
            pos_hint: {'x': 0.78, 'y': 0.07}

<Inicio>
    name: "Inicio"
    FloatLayout:

        StackLayout:
            orientation: 'lr-tb'
            spacing:[50,0]
            padding:[75,75]

            Image:
                source: 'images\lamp.png'
                size_hint: (0.30, None )

            Label:
                size_hint: (None, None)
                text: 'Olá, \nnome'
                font_size: 50
                font_name: 'fonts/Roboto-Medium.ttf'
                color: '#121310'
                halign: 'left'

        
        
        BoxLayout:
            orientation: "vertical"
            spacing: 50
            pos_hint: {"y": .18}

            MDButton:
                on_release: 
                    app.root.current = "RealizarCalculo"
                    root.manager.transition.direction = "left"
                pos_hint: {"center_x": .5}
                height: 70
                shadow_offset: 6, -6

                MDButtonIcon:
                    icon: "calculator"
                    color: '#121310'
                    pos_hint: {"x": .85, "center_y": .5}  
                    font_size: 35 #size of icon

                MDButtonText:
                    text: "Realizar cálculo"
                    theme_font_name: "Custom"
                    theme_font_size: "Custom"
                    font_name: 'fonts/Roboto-Light.ttf'
                    color: '#121310'
                    pos_hint: {"x": .1, "center_y": .5}
                    font_size: 25

            MDButton:
                pos_hint: {"center_x": .5}
                height: 70
                shadow_offset: 6, -6

                MDButtonIcon:
                    icon: "magnify"
                    color: '#121310'
                    pos_hint: {"x": .85, "center_y": .5}
                    font_size: 35 #size of icon

                MDButtonText:
                    text: "Visualizar cálculos"
                    theme_font_name: "Custom"
                    theme_font_size: "Custom"
                    font_name: 'fonts/Roboto-Light.ttf'
                    color: '#121310'
                    pos_hint: {"x": .1, "center_y": .5}
                    font_size: 25

            MDButton:
                pos_hint: {"center_x": .5}
                height: 70
                shadow_offset: 6, -6

                MDButtonIcon:
                    icon: "book-open-variant-outline"
                    color: '#121310'
                    pos_hint: {"x": .85, "center_y": .5}
                    font_size: 35 #size of icon
                MDButtonText:
                    text: "Adicionar conta"
                    theme_font_name: "Custom"
                    theme_font_size: "Custom"
                    font_name: 'fonts/Roboto-Light.ttf'
                    color: '#121310'
                    pos_hint: {"x": .1, "center_y": .5}
                    font_size: 25

            MDButton:
                pos_hint: {"center_x": .5}
                height: 70
                shadow_offset: 6, -6

                MDButtonIcon:
                    icon: "magnify"
                    color: '#121310'
                    pos_hint: {"x": .85, "center_y": .5}
                    font_size: 35 #size of icon
                MDButtonText:
                    text: "Visualizar contas"
                    theme_font_name: "Custom"
                    theme_font_size: "Custom"
                    font_name: 'fonts/Roboto-Light.ttf'
                    color: '#121310'
                    pos_hint: {"x": .1, "center_y": .5}
                    font_size: 25
    