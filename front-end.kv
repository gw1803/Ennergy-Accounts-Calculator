WindowManager:
    Inicio:  
    RealizarCalculo:
    Resultado:
    

<MDButton>
    radius: [10,10,10,10]
    #md_bg_color: (246, 248, 238, 0)    
    theme_width: "Custom"
    size_hint_x: .75

<TextInput>
    input_filter: 'int'
    font_size: 20
    height: 35
    size_hint: 0.7, None
    hint_text_color: "#C0C0C0"
    
<Resultado>
    name: "Resultado"

    FloatLayout:

        MDIconButton:
            on_release: 
                app.root.current = "Inicio"
                root.manager.transition.direction = "right"
            pos_hint: {'x': 0.08, 'y': 0.89}
            icon: "home-circle"
            color: '#121310'
            font_size: 50

        Label:
            size_hint: (None, None)
            pos_hint: {'x': 0.3, 'y': 0.86}
            text: 'Resultado'
            font_size: 45
            font_name: 'fonts/Roboto-Medium.ttf'
            color: '#121310'

        MDWidget:
            id: widget
            pos_hint: {'x': 0.1, 'y': 0.25}
            size_hint: 0.8, 0.6
            radius: 10
            md_bg_color: [149/255,170/255,97/255,1]
        
        Label:
            size_hint: (None, None)
            pos_hint: {'x': 0.38, 'y': 0.75}
            text: '00 - março - 0000'
            font_size: 20
            font_name: 'fonts/Roboto-Medium.ttf'
            color: '#ffffff'

        MDDivider:
            size_hint_x: .8
            pos_hint: {'center_x': .5, 'center_y': .77}
            color:'#ffffff'

        Label:
            size_hint: (None, None)
            pos_hint: {'x': 0.27, 'y': 0.67}
            text: root.val_w
            font_size: 20
            font_name: 'fonts/Roboto-Medium.ttf'
            color: '#ffffff'

        TextInput:
            readonly: True
            text: root.desc_w
            pos_hint: {'x': 0.15, 'y': 0.57} 
            id: valor_wilson
            height: 115
            cursor_color: 0,0,0,0

        MDDivider:
            size_hint_x: .8
            pos_hint: {'center_x': .5, 'center_y': .55}
            color:'#ffffff'
        
        Label:
            size_hint: (None, None)
            pos_hint: {'x': 0.26, 'y': 0.45}
            text: root.val_c
            font_size: 20
            font_name: 'fonts/Roboto-Medium.ttf'
            color: '#ffffff'

        TextInput:
            text: root.desc_c
            readonly: True
            pos_hint: {'x': 0.15, 'y': 0.35} 
            id: valor_conta
            height: 115
            cursor_color: 0,0,0,0
        
        MDDivider:
            size_hint_x: .8
            pos_hint: {'center_x': .5, 'center_y': .32}
            color:'#ffffff'

        MDButton:
            on_release: root.on_release_descricao()
            pos_hint: {"center_x": .5, 'center_y': 0.28}
            style: "text"

            MDButtonIcon:
                icon: "chevron-down-box"
                color: '#121310'
                pos_hint: {"x": .55, "center_y": .5}  
                font_size: 30 #size of icon
                color: '#ffffff'

            MDButtonText:
                theme_font_name: "Custom"
                theme_font_size: "Custom"
                text: 'Detalhes'
                font_size: 20
                font_name: 'fonts/Roboto-Medium.ttf'
                color: '#ffffff'
                pos_hint: {"x": .3, "center_y": .5}

        TextInput:
            readonly: True
            pos_hint: {'x': 1.5, 'y': 0.22}
            id: description
            cursor_color: 0,0,0,0
        
        MDButton:
            id: button_edit
            pos_hint: {'x': 0.12, 'y': 0.1}
            height: 70
            shadow_offset: 6, 6
            size_hint_x: .3
            theme_bg_color: "Custom"
            md_bg_color: "#6EB4A3"  
            #on_release: root.calculate()

            MDButtonText:
                text: "Editar"
                theme_font_name: "Custom"
                theme_font_size: "Custom"
                font_name: 'fonts/Roboto-Medium.ttf'
                color: '#ffffff'
                font_size: 25
                pos_hint: {'x': 0.25, 'center_y': 0.5}
        
        MDButton:
            id: button_exclude
            pos_hint: {'x': 0.6, 'y': 0.1}
            height: 70
            shadow_offset: 6, 6
            size_hint_x: .3
            theme_bg_color: "Custom"
            md_bg_color: "#B46E6E"  
            #on_release: root.calculate()

            MDButtonText:
                text: "Excluir"
                theme_font_name: "Custom"
                theme_font_size: "Custom"
                font_name: 'fonts/Roboto-Medium.ttf'
                color: '#ffffff'
                font_size: 25
                pos_hint: {'x': 0.25, 'center_y': 0.5}
                    
<RealizarCalculo>
    name: "RealizarCalculo"

    FloatLayout:

        MDIconButton:
            on_release: 
                app.root.current = "Inicio"
                root.manager.transition.direction = "right"
            pos_hint: {'x': 0.08, 'y': 0.89}
            icon: "arrow-left-circle"
            color: '#121310'
            font_size: 50

        Label:
            size_hint: (None, None)
            pos_hint: {'x': 0.43, 'y': 0.86}
            text: 'Realizar Cálculo'
            font_size: 45
            font_name: 'fonts/Roboto-Medium.ttf'
            color: '#121310'
        
        MDWidget:
            pos_hint: {'x': 0.1, 'y': 0.1}
            size_hint: 0.8, 0.7
            radius: 10
            md_bg_color: [149/255,170/255,97/255,1]

        Label:
            size_hint: (None, None)
            pos_hint: {'x': 0.18, 'y': 0.7}
            text: 'Padrão geral '
            font_size: 20
            font_name: 'fonts/Roboto-Medium.ttf'
            color: '#ffffff'

        TextInput:
            pos_hint: {'x': 0.15, 'y': 0.7} 
            hint_text: "Ex: 35673"
            id: padrao_geral
            on_text: root.on_text(self)
            
        Label:
            size_hint: (None, None)
            pos_hint: {'x': 0.19, 'y': 0.6}
            text: 'Padrão Wilson '
            font_size: 20
            font_name: 'fonts/Roboto-Medium.ttf'
            color: '#ffffff'

        TextInput:
            size_hint: 0.30, None
            pos_hint: {'x': 0.15, 'y': 0.6} 
            hint_text: "Ex: 35673"
            id: padrao_wilson
            on_text: root.on_text(self)

        Label:
            size_hint: (None, None)
            pos_hint: {'x': 0.58, 'y': 0.6}
            text: 'Padrão Célio '
            font_size: 20
            font_name: 'fonts/Roboto-Medium.ttf'
            color: '#ffffff'

        TextInput:
            size_hint: 0.30, None
            pos_hint: {'x': 0.55, 'y': 0.6} 
            hint_text: "Ex: 35673"
            id: padrao_celio
            on_text: root.on_text(self)

        MDDivider:
            size_hint_x: .8
            pos_hint: {'center_x': .5, 'center_y': .55}
            color:'#ffffff'
        
        Label:
            size_hint: (None, None)
            pos_hint: {'x': 0.24, 'y': 0.45}
            text: 'Valor total da conta'
            font_size: 20
            font_name: 'fonts/Roboto-Medium.ttf'
            color: '#ffffff'

        TextInput:
            pos_hint: {'x': 0.15, 'y': 0.45} 
            hint_text: "Ex: 230.45"
            input_filter: 'float'
            id: valor_conta
            on_text: root.on_text(self)

        Label:
            size_hint: (None, None)
            pos_hint: {'x': 0.17, 'y': 0.35}
            text: 'Valor do KW'
            font_size: 20
            font_name: 'fonts/Roboto-Medium.ttf'
            color: '#ffffff'

        TextInput:
            pos_hint: {'x': 0.15, 'y': 0.35} 
            hint_text: "Ex: 0.9596"
            input_filter: 'float'
            id: valor_kw
            on_text: root.on_text(self)
        
        Label:
            size_hint: (None, None)
            pos_hint: {'x': 0.23, 'y': 0.25}
            text: 'Taxa de iluminação'
            font_size: 20
            font_name: 'fonts/Roboto-Medium.ttf'
            color: '#ffffff'

        TextInput:
            pos_hint: {'x': 0.15, 'y': 0.25} 
            hint_text: "Ex: 45.00"
            input_filter: 'float'
            id: taxa_iluminacao
            on_text: root.on_text(self)

        MDButton:
            id: button
            pos_hint: {'x': 0.35, 'y': 0.14}
            height: 70
            shadow_offset: -6, 6
            size_hint_x: .3
            disabled: True
            on_release: 
                root.calculate()

            MDButtonText:
                text: "Calcular"
                theme_font_name: "Custom"
                theme_font_size: "Custom"
                font_name: 'fonts/Roboto-Light.ttf'
                color: '#121310'
                font_size: 25
                pos_hint: {'x': 0.18, 'center_y': 0.5}
                

        Image:
            source: 'images\lamp.png'
            size_hint: (0.2, None )
            pos_hint: {'x': 0.78, 'y': 0.07}

