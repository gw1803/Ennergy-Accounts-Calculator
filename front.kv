WindowManager:
    Inicio:  
    RealizarCalculo:
    Resultado:
    VisualizarCalculos:
    

<MDButton>
    radius: [50,50,50,50]
    #md_bg_color: (246, 248, 238, 0)    
    theme_width: "Custom"
    size_hint_x: .75

<TextInput>
    input_filter: 'int'
    font_size: 50
    height: 80
    size_hint: 0.7, None
    hint_text_color: "#C0C0C0"

<VisualizarCalculos>    
    size: root.width, root.height
    name:"VisualizarCalculos"
    on_enter: root.show_buttons()

    FloatLayout:

        MDIconButton:
            on_release: 
                app.root.current = "Inicio"
                root.manager.transition.direction = "right"
            pos_hint: {'x': 0.08, 'y': 0.9}
            icon: "home-circle"
            color: '#121310'
            font_size: 50

        Label:
            size_hint: (None, None)
            pos_hint: {'x': 0.4, 'y': 0.9}
            text: 'Visualizar\ncálculos'
            font_size: 100
            font_name: 'fonts/Roboto-Medium.ttf'
            color: '#121310'

        MDWidget:
            id: widget
            pos_hint: {'x': 0.1, 'y': 0.1}
            size_hint: 0.8, 0.7
            radius: 50
            md_bg_color: [149/255,170/255,97/255,1]
        

<Resultado>
    name: "Resultado"
    on_enter: root.reload_variables()
    size: root.width, root.height

    FloatLayout:

        MDIconButton:
            on_release: 
                app.root.current = "Inicio"
                root.manager.transition.direction = "right"
            pos_hint: {'x': 0.08, 'y': 0.9}
            icon: "home-circle"
            color: '#121310'
            font_size: 50

        Label:
            size_hint: (None, None)
            pos_hint: {'x': 0.4, 'y': 0.9}
            text: 'Resultado'
            font_size: 100
            font_name: 'fonts/Roboto-Medium.ttf'
            color: '#121310'

        MDWidget:
            id: widget
            pos_hint: {'x': 0.1, 'y': 0.25}
            size_hint: 0.8, 0.6
            radius: 50
            md_bg_color: [149/255,170/255,97/255,1]
        
        Label:
            id: result_data
            size_hint: (None, None)
            pos_hint: {'center_x': 0.5, 'y': 0.79}
            font_size: 55
            font_name: 'fonts/Roboto-Medium.ttf'
            color: '#ffffff'

        MDDivider:
            size_hint_x: .8
            pos_hint: {'center_x': .5, 'center_y': .77}
            color:'#ffffff'

        Label:
            text: "Valor Wilson"
            size_hint: (None, None)
            pos_hint: {'center_x': 0.5, 'y': 0.73}
            font_size: 55
            font_name: 'fonts/Roboto-Medium.ttf'
            color: '#ffffff'

        TextInput:
            readonly: True
            pos_hint: {'x': 0.15, 'y': 0.57} 
            id: valor_wilson
            height: root.height/8
            cursor_color: 0,0,0,0

        MDDivider:
            size_hint_x: .8
            pos_hint: {'center_x': .5, 'center_y': .55}
            color:'#ffffff'
        
        Label:
            text: "Valor Célio"
            size_hint: (None, None)
            pos_hint: {'center_x': 0.5, 'y': 0.51}
            font_size: 55
            font_name: 'fonts/Roboto-Medium.ttf'
            color: '#ffffff'

        TextInput:
            readonly: True
            pos_hint: {'x': 0.15, 'y': 0.35} 
            id: valor_celio
            height: root.height/8
            cursor_color: 0,0,0,0
        
        MDDivider:
            size_hint_x: .8
            pos_hint: {'center_x': .5, 'center_y': .32}
            color:'#ffffff'

        MDButton:
            on_release: root.on_release_descricao()
            pos_hint: {"center_x": .5, 'center_y': 0.28}
            style: "text"

            MDButtonIcon:
                icon: "chevron-down-box"
                color: '#121310'
                pos_hint: {"x": .65, "center_y": .5}  
                font_size: 60 #size of icon
                color: '#ffffff'

            MDButtonText:
                theme_font_name: "Custom"
                theme_font_size: "Custom"
                text: 'Detalhes'
                font_size: 55
                font_name: 'fonts/Roboto-Medium.ttf'
                color: '#ffffff'
                pos_hint: {'center_x': 0.5, "center_y": .5}

        TextInput:
            readonly: True
            pos_hint: {'x': 1.5, 'y': 0.13}
            id: descricao
            cursor_color: 0,0,0,0
            height: root.height/8
        
        MDButton:
            id: button_edit
            pos_hint: {'x': 0.12, 'y': 0.15}
            shadow_offset: 6, 6
            size_hint_x: .35
            height: root.height/12
            theme_bg_color: "Custom"
            md_bg_color: "#6EB4A3"  
            on_release: root.on_release_edit()

            MDButtonText:
                text: "Editar"
                theme_font_name: "Custom"
                theme_font_size: "Custom"
                font_name: 'fonts/Roboto-Medium.ttf'
                color: '#ffffff'
                font_size: 60
                pos_hint: {'x': 0.3, 'center_y': 0.5}
        
        MDButton:
            id: button_exclude
            pos_hint: {'x': 0.53, 'y': 0.15}
            height: root.height/12
            shadow_offset: 6, 6
            size_hint_x: .35
            theme_bg_color: "Custom"
            md_bg_color: "#B46E6E"  
            on_release: root.on_release_delete()

            MDButtonText:
                text: "Excluir"
                theme_font_name: "Custom"
                theme_font_size: "Custom"
                font_name: 'fonts/Roboto-Medium.ttf'
                color: '#ffffff'
                font_size: 60
                pos_hint: {'x': 0.3, 'center_y': 0.5}
                    
<RealizarCalculo>
    size: root.width, root.height
    name: "RealizarCalculo"
    FloatLayout:

        MDIconButton:
            on_release: 
                app.root.current = "Inicio"
                root.manager.transition.direction = "right"
                root.manager.get_screen("RealizarCalculo").edit_verifier = False
            pos_hint: {'x': 0.08, 'y': 0.85}
            icon: "arrow-left-circle"
            color: '#121310'
            font_size: 70

        Label:
            size_hint: (None, None)
            pos_hint: {'x': 0.5, 'y': 0.85}
            text: 'Realizar Cálculo'
            font_size: 100
            font_name: 'fonts/Roboto-Medium.ttf'
            color: '#121310'
        
        MDWidget:
            pos_hint: {'x': 0.1, 'y': 0.1}
            size_hint: 0.8, 0.7
            radius: 50
            md_bg_color: [149/255,170/255,97/255,1]

        Label:
            size_hint: (None, None)
            pos_hint: {'x': 0.26, 'y': 0.73}
            text: 'Padrão geral '
            font_size: 55
            font_name: 'fonts/Roboto-Medium.ttf'
            color: '#ffffff'

        TextInput:
            pos_hint: {'x': 0.15, 'y': 0.7} 
            size_hint: 0.32, None
            hint_text: "Ex: 35673"
            id: padrao_geral
            on_text: root.on_text(self)
        
        Label:
            size_hint: (None, None)
            pos_hint: {'x': 0.53, 'y': 0.73}
            text: "Data"
            font_size: 55
            font_name: 'fonts/Roboto-Medium.ttf'
            color: '#ffffff'
        
        MDButton:
            id: Data
            radius: [0,0,0,0]
            pos_hint: {'x': 0.53, 'y': 0.7}
            height: 82
            style: "outlined"
            theme_bg_color: "Custom"
            md_bg_color: "#e9e9e9"
            size_hint_x: .32
            on_release: root.open_modal()

            MDButtonText:
                id: DataText
                text: str(root.data)
                theme_font_name: "Custom"
                theme_font_size: "Custom"
                color: '#121310'
                font_size: 50
                pos_hint: {'x': 0.1, 'center_y': 0.5}

        Label:
            size_hint: (None, None)
            pos_hint: {'x': 0.27, 'y': 0.63}
            text: 'Padrão Wilson '
            font_size: 55
            font_name: 'fonts/Roboto-Medium.ttf'
            color: '#ffffff'

        TextInput:
            size_hint: 0.32, None
            pos_hint: {'x': 0.15, 'y': 0.6} 
            hint_text: "Ex: 35673"
            id: padrao_wilson
            on_text: root.on_text(self)

        Label:
            size_hint: (None, None)
            pos_hint: {'x': 0.63, 'y': 0.63}
            text: 'Padrão Célio '
            font_size: 55
            font_name: 'fonts/Roboto-Medium.ttf'
            color: '#ffffff'

        TextInput:
            size_hint: 0.32, None
            pos_hint: {'x': 0.53, 'y': 0.6} 
            hint_text: "Ex: 35673"
            id: padrao_celio
            on_text: root.on_text(self)

        MDDivider:
            size_hint_x: .8
            pos_hint: {'center_x': .5, 'center_y': .55}
            color:'#ffffff'
        
        Label:
            size_hint: (None, None)
            pos_hint: {'x': 0.33, 'y': 0.48}
            text: 'Valor total da conta'
            font_size: 55
            font_name: 'fonts/Roboto-Medium.ttf'
            color: '#ffffff'

        TextInput:
            pos_hint: {'x': 0.15, 'y': 0.45} 
            hint_text: "Ex: 230.45"
            input_filter: 'float'
            id: valor_conta
            on_text: root.on_text(self)

        Label:
            size_hint: (None, None)
            pos_hint: {'x': 0.25, 'y': 0.38}
            text: 'Valor do KW'
            font_size: 55
            font_name: 'fonts/Roboto-Medium.ttf'
            color: '#ffffff'

        TextInput:
            pos_hint: {'x': 0.15, 'y': 0.35} 
            hint_text: "Ex: 0.9596"
            input_filter: 'float'
            id: valor_kw
            on_text: root.on_text(self)
        
        Label:
            size_hint: (None, None)
            pos_hint: {'x': 0.33, 'y': 0.28}
            text: 'Taxa de iluminação'
            font_size: 55
            font_name: 'fonts/Roboto-Medium.ttf'
            color: '#ffffff'

        TextInput:
            pos_hint: {'x': 0.15, 'y': 0.25} 
            hint_text: "Ex: 45.00"
            input_filter: 'float'
            id: taxa_iluminacao
            on_text: root.on_text(self)

        MDButton:
            id: button
            pos_hint: {'x': 0.35, 'y': 0.14}
            height: root.height/12
            shadow_offset: -6, 6
            size_hint_x: .3
            disabled: True
            on_release: 
                root.calculate()

            MDButtonText:
                text: "Calcular"
                theme_font_name: "Custom"
                theme_font_size: "Custom"
                font_name: 'fonts/Roboto-Light.ttf'
                color: '#121310'
                font_size: 60
                pos_hint: {'x': 0.18, 'center_y': 0.5}
                

        Image:
            source: 'images/lamp.png'
            pos_hint: {'x': 0.78, 'y': 0.07}
            allow_stretch: True
            keep_ratio: True
            size_hint_y: None
            size_hint_x: None
            width: root.width/5
            height: root.height/5

<Inicio>
    size: root.width, root.height
    name: "Inicio"
    FloatLayout:

        Image:
            pos_hint: {'x': 0.2, 'y': 0.75}
            source: 'images/lamp.png'
            allow_stretch: True
            keep_ratio: True
            size_hint_y: None
            size_hint_x: None
            width: root.width/5
            height: root.height/5

        Label:
            size_hint: (None, None)
            text: 'Olá, \nnome'
            font_size: 130
            pos_hint: {'x': 0.55, 'y': 0.83}
            font_name: 'fonts/Roboto-Medium.ttf'
            color: '#121310'
            halign: 'left'
        
        BoxLayout:
            orientation: "vertical"
            spacing: 100
            pos_hint: {"y": .18}
            size: root.width, root.height/2

            MDButton:
                on_release: 
                    root.manager.get_screen("RealizarCalculo").clean_fields()
                    app.root.current = "RealizarCalculo"
                    root.manager.transition.direction = "left"
                pos_hint: {"center_x": .5}
                shadow_offset: 6, -6
                height: root.height/12

                MDButtonIcon:
                    icon: "calculator"
                    color: '#121310'
                    pos_hint: {"x": .85, "center_y": .5}  
                    font_size: 70 #size of icon

                MDButtonText:
                    text: "Realizar cálculo"
                    theme_font_name: "Custom"
                    theme_font_size: "Custom"
                    font_name: 'fonts/Roboto-Light.ttf'
                    color: '#121310'
                    pos_hint: {"x": .1, "center_y": .5}
                    font_size: 60

            MDButton:
                on_release: 
                    app.root.current = "VisualizarCalculos"
                    root.manager.transition.direction = "left"
                pos_hint: {"center_x": .5}
                shadow_offset: 6, -6
                height: root.height/12
                MDButtonIcon:
                    icon: "magnify"
                    color: '#121310'
                    pos_hint: {"x": .85, "center_y": .5}
                    font_size: 70 #size of icon

                MDButtonText:
                    text: "Visualizar cálculos"
                    theme_font_name: "Custom"
                    theme_font_size: "Custom"
                    font_name: 'fonts/Roboto-Light.ttf'
                    color: '#121310'
                    pos_hint: {"x": .1, "center_y": .5}
                    font_size: 60

            MDButton:
                pos_hint: {"center_x": .5}
                shadow_offset: 6, -6
                height: root.height/12
                disabled: True
                MDButtonIcon:
                    icon: "book-open-variant-outline"
                    color: '#121310'
                    pos_hint: {"x": .85, "center_y": .5}
                    font_size: 70 #size of icon
                MDButtonText:
                    text: "Adicionar conta"
                    theme_font_name: "Custom"
                    theme_font_size: "Custom"
                    font_name: 'fonts/Roboto-Light.ttf'
                    color: '#121310'
                    pos_hint: {"x": .1, "center_y": .5}
                    font_size: 60

            MDButton:
                pos_hint: {"center_x": .5}
                shadow_offset: 6, -6
                height: root.height/12
                disabled: True
                MDButtonIcon:
                    icon: "magnify"
                    color: '#121310'
                    pos_hint: {"x": .85, "center_y": .5}
                    font_size: 70 #size of icon
                MDButtonText:
                    text: "Visualizar contas"
                    theme_font_name: "Custom"
                    theme_font_size: "Custom"
                    font_name: 'fonts/Roboto-Light.ttf'
                    color: '#121310'
                    pos_hint: {"x": .1, "center_y": .5}
                    font_size: 60
    